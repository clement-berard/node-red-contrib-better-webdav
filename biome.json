{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": { "enabled": true },
	"files": {
		"include": ["src/**/*.ts", "src/**/*.json"],
		"ignore": ["**/dist"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 120
		}
	},
	"linter": {
		"rules": {
			"recommended": true,
			"complexity": { "noForEach": "off" },
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
